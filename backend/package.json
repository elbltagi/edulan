{
  "name": "backend",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pkg": "pkg index.js -t node18 -d --output backend.exe"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": ["node_modules/axios/**/*.js", ".env"],
    "assets": [".env"]


    
  },
  "build": {
    "appId": "com.edulan.myapp",
    "productName": "EduLAN",
    "files": [
      "main.js",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "dist/**/*",
      ".env",
       {
        "from":"dist",
        "to":"dist",
        "filter": ["**/*"]
      }
    ],
    "directories": {
    "output": "release"  
  },
    "extraResources": [
      {
        "from": "assets/app.exe",
        "to": "app.exe"
      }
      
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
